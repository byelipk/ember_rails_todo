<!-- Context: Todos.TodosController -->

<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
    {{input type="text" id="new-todo" placeholder="What needs to be done?"
      value=newTitle action="createTodo"}}
  </header>

  <section id="main">
    <!-- Routes nested within the `todos` namespace will render into this outlet. -->
    {{outlet}}

    <input type="checkbox" id="toggle-all">
  </section>

  <footer id="footer">
    <span id="todo-count">
      <strong>{{this.remaining}}</strong> {{this.inflection}} left
    </span>
    <ul id="filters">
      <li>
        {{#link-to "todos.index" activeClass="selected"}}All{{/link-to}}
      </li>
      <li>
        <!-- For info on activeClass see: -->
        <!-- http://emberjs.com/api/classes/Ember.LinkView.html#property_activeClass -->
        {{#link-to "todos.active" activeClass="selected"}}Active{{/link-to}}
      </li>
      <li>
        {{#link-to "todos.completed" activeClass="selected"}}Completed{{/link-to}}
      </li>
    </ul>

    {{#if hasCompleted}}
      <!-- The `action` helper listens for click events by default. For info on
           how to set the event to listen for see:
           http://emberjs.com/guides/templates/actions/#toc_specifying-the-type-of-event -->
      <button id="clear-completed" {{action "clearCompleted"}}>
        Clear completed ({{completed}})
      </button>
    {{/if}}
  </footer>
</section>

<footer id="info">
  <p>Double-click to edit a todo</p>
</footer>
